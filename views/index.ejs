        <!------Socket io script link--------->
        <script src="/socket.io/socket.io.js"></script>

    </head>

    <body>

        <div id="video-content"></div>




        <div id="settings_options">

            <p class="mb-1 mt-2">Settings</p>

            <div class="mt-2">
                <button id="turn_off_button" class="btn turnoff_btn">Camera Turn Off</button>
                <button id="mute_button" class="btn mute_btn">Mute</button>
                <button id="share_screen_button" class="btn share_screen mt-3">Share Screen</button>
            </div>

            <div class="text-center my-3">
                <h6 class="select_cam_title mt-4">Select Your Cam</h6>
                <select id="camera_select" ria-label="Default select example" class="form-select">
                </select>
            </div>

            <div class="text-center my-3">
                <h6 class="select_mic_title mt-2">Select Your Microphone</h6>
                <select id="mic_select" aria-label="Default select example" class="form-select">
                </select>
            </div>

            <div class="chat_content mt-3">
                <h6>Chat</h6>
                <ul class="chat_display"></ul>

                <form id="chat_form" class="chat_field">
                    <input type="text" placeholder="Type your chat.." />
                    <button type="submit"><i class="fas fa-paper-plane"></i></button>
                </form>
            </div>
        </div>


        <script defer src="/js/app.js"></script>

    </body>

